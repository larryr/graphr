id: () = {
    id_ident,
    id_num,
    id_str,
    id_html,
};

id_ident: () = {
    r"[a-zA-Z_][a-zA-Z0-9_]*",
};

id_num: () = {
    r"[-]*[0-9]+",
};

id_str: () = {
    r#""[^"]*""#,
};

id_html: () = {
    r#"<[^>]*>"#,
};

colon: () = {
    ":",
};

semicolon: () = {
    ";",
};

comma: () = {
    ",",
};

lbracket: () = {
    "[",
};

rbracket: () = {
    "]",
};

edgeop: () = {
    "->",
    "--",
};


pub T_node: () = NODE;
pub T_edge: () = EDGE;
pub T_graph: () = GRAPH;
pub T_digraph: () = DIGRAPH;
pub T_subgraph: () = SUBGRAPH;
pub T_strict: () = STRICT;


